#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main() {			//배열을 이용하여 5가지 숫자를 입력받은 다음 입력된 위치의 숫자를 삭제하는 리스트 프로그램
	int arr[6], i, j;
	printf("Enter 5 elements in array: ");
	for (i = 0; i < 5; i++)									//데이터 입력
		scanf("%d", &arr[i]);
	printf("Stored element in array:");
	for (i = 0; i < 5; i++)
		printf("  %d", arr[i]);								//데이터 출력
	printf("\nEnter poss. of element to delete: ");
	scanf("%d", &i);										//리스트의 삭제 위치 입력
	for (; i <= 0 || i >= 6;)
	{
		printf("please input 1~5: ");					//사용자가 배열 인덱스 범위 외의 숫자 입력시 재입력 요구
		scanf("%d", &i);
	}
	for (j = i-1; j < 4; j++)								//입력 위치 데이터 삭제
	{
		arr[j] = arr[j+1];
		arr[j + 1] = NULL;
	}
	printf("After deletion elements in array:");
	for (i = 0; i < 4; i++)
		printf("  %d", arr[i]);								//데이터 출력
	return 0;
}
