#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main() {			//배열을 이용하여 5가지 숫자를 입력받은 다음 입력된 위치에 입력된 숫자를 넣는 리스트 프로그램.
	int arr[6], i, j;
	printf("Enter 5 elements in array: ");
	for (i = 0; i < 5; i++)									//데이터 입력
		scanf("%d", &arr[i]);
	printf("Stored element in array:");
	for (i = 0; i < 5; i++)
		printf("  %d", arr[i]);								//데이터 출력
	printf("\nEnter position for enter element: ");
	scanf("%d", &i);										//데이터 삽입 위치 입력
	for (; i <= 0 || i >= 7;)
	{
		printf("please input 1~6: ");					//사용자가 배열 인덱스 범위 외의 숫자 입력시 재입력 요구
		scanf("%d", &i);
	}
	printf("Enter new element: ");
	scanf("%d", &j);										//삽입 데이터 입력
	int a;
	for (a = 5; a >= i-1; a--)								//리스트 배열 내용 이동
	{
		arr[a + 1] = arr[a];
	}
	arr[i-1] = j;											//입력위치에 데이터 저장
	printf("Stored data in array:");
	for (i = 0; i < 6; i++)
		printf("  %d", arr[i]);								//리스트 출력
	return 0;
}
